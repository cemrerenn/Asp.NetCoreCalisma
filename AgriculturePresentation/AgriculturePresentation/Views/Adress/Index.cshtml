@using EntityLayer.Concrete
@model List<Adress>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Listesi</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Açıklama 1</th>
                            <th>Açıklama 2</th>
                            <th>Açıklama 3</th>
                            <th>Açıklama 4</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                           <tr>
                                <td>@item.Desctiption1</td>
                                <td>@item.Desctiption2</td>
                                <td>@item.Desctiption3</td>
                                <td>@item.Desctiption4</td>
                                
                             
                                <td><a href="/Adress/EditAdress/@item.AdressID" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
</div>

