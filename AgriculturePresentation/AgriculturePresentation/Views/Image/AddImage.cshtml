@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Görsel Kaydı</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername1">Başlık</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="Title" placeholder="Başlık Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Görsel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="ImageUrl" placeholder="Görev Tanımı">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Açıklama</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="Description" placeholder="Görsel Url">
                </div>
                


                <button type="submit" class="btn btn-primary me-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>


