@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Takım Arkadaşı Kaydı</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername1">Adı Soyadı</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputUsername1" asp-for="PersonName" placeholder="Ad Soyad">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Görev</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="Title" placeholder="Görev Tanımı">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Görsel</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="ImageUrl" placeholder="Görsel Url">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">FAcebook</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="FacebookUrl" placeholder="Facebook Url Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Instagram</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="InstagramUrl" placeholder="Instagram Url Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Twitter</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="TwitterUrl" placeholder="Twittler Url Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Web Sitesi</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" asp-for="WebsiteUrl" placeholder="Varsa web sitesi linki giriniz.">
                </div>
               

                <button type="submit" class="btn btn-primary me-2">Kaydet</button>

            </form>
        </div>
    </div>
</div>


