@using EntityLayer.Concrete
@model List<Annouoncement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Durum</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouoncementID</td>
                                <td>@item.Title</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouoncementID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Announcement/EditAnnouncement/@item.AnnouoncementID" class="btn btn-outline-success">Güncelle</a></td>
                                <td>
                                    @if (item.Status == true)
                                {
                                    <a href="/Announcement/ChangeStatusToFalse/@item.AnnouoncementID" class="btn btn-outline-secondary">Pasif Yap</a>
                                }
                                else 
                                {
                                 <a href="/Announcement/ChangeStatusToTrue/@item.AnnouoncementID" class="btn btn-outline-warning">Aktif Yap</a>
                                }
                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Announcement/AddAnnouncement" class="btn btn-outline-info">Yeni Duyuru Girişi</a>
            </div>
        </div>
    </div>
</div>